{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Editar Postagem</h4>
        <form action="/admin/postagem/edit" method="POST">
        <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo" required>Titulo: </label>
            <input type="text" name="titulo" class="form-control" required value="{{postagem.titulo}}">
             <label for="slug">Slug: </label>
             <input type="text" name="slug" class="form-control"required  value="{{postagem.slug}}">
              <label for="descricao">Descricao: </label>
              <input type="text" name="descricao"  class="form-control"required  value="{{postagem.descricao}}">
              <label for="descricao">Conte√∫do: </label>
              <textarea name="conteudo" class="form-control">{{postagem.conteudo}}</textarea>
              <label for="categoria" required>Categoria: </label>
              <select name="categoria" class="custom-select" required>
                  {{#each categorias}}
                  <option value="{{_id}}">{{nome}}</option>]
                  {{else}} 
                  <option value="0">Nenhuma Categoria Registrada</option>]
                  {{/each}}
              </select>
              <button class="btn btn-success mt-4" type="submit">Editar Postagem</button>
        </form>

    </div>
</div>